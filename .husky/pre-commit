echo 'Please be patient, this may take a while'

echo 'First, lets check the code style or linting errors 🎨'

echo ''
npx lint-staged || {
  echo 'Linting failed, please fix the errors and try again'
  exit 1
}

echo ''
echo 'Checking TypeScript type errors 🧐'
npx tsc --noEmit || {
  echo 'Type checking failed, please fix the errors and try again'
  exit 1
}

echo "Now we'll run some task for you 🤖"

echo 'All good, you can commit now 🎉'